# Linux

sudo -s psql -c "DROP DATABASE rappi" postgres

sudo -s psql -c "CREATE DATABASE rappi" postgres

# Before run the next command, you must install POSTGIS

sudo -u postgres psql -c "CREATE EXTENSION POSTGIS" rappi

sequelize db:migrate

sudo -s psql -c "\i ../.seed-database" rappi

# Windows

psql -c "DROP DATABASE rappi" postgres root

psql -c "CREATE DATABASE rappi" postgres root

psql -c "CREATE EXTENSION POSTGIS" rappi root

sequelize db:migrate

psql -c "\i .seed-database" rappi root